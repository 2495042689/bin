#! /bin/sh

if [ $# -gt 0 ] ; then
    bgtype=$1
else
	bgtype=$(cat "$HOME"/.conditions)
    case "$bgtype" in
        Dark)
            bgtype=Light
            ;;
        Light)
            bgtype=Dark
            ;;
    esac
fi

printf "%s" "$bgtype" > "$HOME"/.conditions
osascript - << END
tell application "iTerm"
	tell terminals
		tell sessions
			do shell script "printf '\\\\033]50;SetProfile=$bgtype\\\\a' > " & tty
		end tell
	end tell
end tell
END
