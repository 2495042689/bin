#! /bin/sh

if [ $# -gt 0 ] ; then
    bgtype=$1
else
	bgtype=$(cat "$HOME"/.conditions)
    case "$bgtype" in
        Dark)
            bgtype=Light
            ;;
        Light)
            bgtype=Dark
            ;;
    esac
fi

printf "%s" "$bgtype" > "$HOME"/.conditions
osascript - << END
tell application "Terminal"
	set default settings to settings set "Theme $bgtype"
	set current settings of tabs of windows to settings set "Theme $bgtype"
end tell
END
