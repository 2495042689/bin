#! /bin/dash

[ -z "$EWMHSTATUS_FIFO" ] && exit 1

. panel_colors

mkfifo "$EWMHSTATUS_FIFO"
ewmhstatus "DejaDroid Sans" 11 9 2> "$HOME/.ewmhstatus.log" | dzen2 -bg "$BACKGROUND" -fg "$FOREGROUND" -title-name bar -dock -h 24 -fn 'DejaDroid Sans:pixelsize=11' -ta l &
clock '%H:%M' 5 | uniq > "$EWMHSTATUS_FIFO" &
compton-trans -w "$(xdotool search --sync --class dzen)" 90 &
