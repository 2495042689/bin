#! /bin/dash

[ -e "$PANEL_PID" ] && exit 1

FONT_FAMILY='DejaDroid Sans'
FONT_SIZE=11

. panel_colors

xtitle -sf 'T%s' > "$PANEL_FIFO" &
clock 'S\(^fn('$PANEL_ICONS_FONT_FAMILY':pixelsize='$PANEL_ICONS_FONT_SIZE')\)^fn()  %a %H:%M' 5 > "$PANEL_FIFO" &
cat "$PANEL_FIFO" | panel_dzen2 -f "$PANEL_FONT_FAMILY" -s "$PANEL_FONT_SIZE" -F "$PANEL_ICONS_FONT_FAMILY" -S "$PANEL_ICONS_FONT_SIZE" | uq | sed -u 's/\\[()]//g' | dzen2 -h $PANEL_HEIGHT -dock -ta l -title-name panel -fn "${FONT_FAMILY}:pixelsize=${FONT_SIZE}" -fg "$COLOR_FOREGROUND" -bg "$COLOR_BACKGROUND" &
# pgrep -nx dzen2 > "$PANEL_PID"
xdotool search --sync --class dzen getwindowpid > "$PANEL_PID"
# compton-trans -w "$(xdotool search --sync --class dzen)" 90 &
