#! /bin/dash

[ -z "$PANEL_FIFO" ] && exit 1

FONT_FAMILY='DejaDroid Sans'
FONT_SIZE=11

. panel_colors

xtitle -sf 'T%s' > "$PANEL_FIFO" &
clock 'S%A %H:%M' 5 > "$PANEL_FIFO" &
cat "$PANEL_FIFO" | panel_dzen2 -f "$FONT_FAMILY" -s "$FONT_SIZE" | uq | dzen2 -h $PANEL_HEIGHT -dock -ta l -title-name panel -fn "${FONT_FAMILY}:pixelsize=${FONT_SIZE}" -fg "$COLOR_FOREGROUND" -bg "$COLOR_BACKGROUND" &
# pgrep -nx dzen2 > "$PANEL_PID"
xdotool search --sync --class dzen getwindowpid > "$PANEL_PID"
# compton-trans -w "$(xdotool search --sync --class dzen)" 90 &
