#! /bin/dash

[ -e "$PANEL_PGRP" ] && exit 1

. panel_colors

[ -f "$PANEL_FOOD" ] && { cat "$PANEL_FOOD" > "$PANEL_FIFO"; rm "$PANEL_FOOD"; } &
bspc put_status
xtitle -sf 'T%s' > "$PANEL_FIFO" &
clock -s -i 5 -f "C%a %H:%M" > "$PANEL_FIFO" &
{ iwgetid > /dev/null 2>&1 && echo Nup || echo Ndown; } > "$PANEL_FIFO" &
cat "$PANEL_FIFO" | panel_dzen2 -a -f "$PANEL_FONT_FAMILY" -s "$PANEL_FONT_SIZE" -F "$PANEL_ICONS_FONT_FAMILY" -S "$PANEL_ICONS_FONT_SIZE" | uq | dzen2 -h $PANEL_HEIGHT -dock -ta l -title-name panel -fn "${PANEL_FONT_FAMILY}:pixelsize=${PANEL_FONT_SIZE}" -fg "$COLOR_FOREGROUND" -bg "$COLOR_BACKGROUND" &
# ps -p $(pgrep -nx cat) -o pgrp= | tr -d ' ' > "$PANEL_PGRP"
ps -p $(xdotool search --sync --class dzen getwindowpid) -o pgrp= | tr -d ' ' > "$PANEL_PGRP"
# compton-trans -w "$(xdotool search --sync --class dzen)" 90 &
