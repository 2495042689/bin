#! /bin/dash

while [ $# -gt 0 ]
do
    filelist=""
    case "$1" in
        dots)
            filelist=".coordinates .mpoprc .msmtprc .xscreensaver .procmailrc .jnewsrc .urlview .eatrc"
            ;;
        dirs)
            filelist=".local .config .mutt .vim .mpd .themes .colors .fonts .icons .aria2 .irssi .pal .FontForge .ssh .w3m .elinks .ncmpcpp"
            ;;
        usenet)
            filelist=".slrn .slrnpull/slrnpull.conf"
            ;;
        mail)
            filelist=".maildir"
            ;;
        src)
            filelist="src/lang src/github src/aur"
            ;;
        aur)
            filelist="src/aur"
            ;;
        doc)
            filelist="doc"
            ;;
        sys)
            filelist="/etc/rc.conf /etc/rc.local /usr/share/kbd/keymaps/extra.map /boot/grub/menu.lst /usr/local/bin/brightness /etc/pacman.conf $(ls /etc/udev/rules.d/* 2> /dev/null) /etc/pm/sleep.d/49xscreensaver"
            ;;
    esac
    if [ -n "$filelist" ] ; then
        tar -cvz -C ~ -f "${1}.tgz" $filelist
    fi
    shift
done
