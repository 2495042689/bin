#! /bin/sh

while [ $# -gt 0 ]
do
	filelist=""
	case "$1" in
		prefs)
			for app in Finder QuickSilver Preview iTerm Skim Snes9x ; do
				filelist="$filelist prefs/$(bid ${app}).plist"
			done
			filelist="$filelist prefs/com.apple.symbolichotkeys.plist"
			;;
		dots)
			filelist=".coordinates .github_api_token .mpoprc .msmtprc .procmailrc .eatrc .castgetrc"
			;;
		dirs)
			filelist=".local .config .mutt .vim .mpd .themes .fonts .icons .aria2 .irssi .pal .FontForge .ssh .w3m .elinks .lftp .ncmpcpp .audacity-data .audacity-files"
			;;
		usenet)
			filelist=".jnewsrc .usenet_id .usenet .slrn"
			;;
		mail)
			filelist=".maildir"
			;;
		src)
			filelist="src/lang"
			;;
		abs)
			filelist="src/abs"
			;;
		doc)
			filelist="doc"
			;;
		sys)
			filelist="/etc/hooks.d /etc/dictd.conf $(find `brew --prefix`/share/dictd -type f)"
			;;
	esac
	if [ -n "$filelist" ] ; then
		tar -cvz -C "$HOME" -f "${1}.tgz" $filelist
	fi
	shift
done
