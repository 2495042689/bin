#! /bin/dash

if [ $# -gt 0 ] ; then
    uri=$1
    scheme=${1%%:*}
else
    uri=$DWB_URI
    scheme=$DWB_SCHEME
fi

case $scheme in
    mailto)
        urxvtc -e mutt "$uri"
        ;;
    ftp)
        urxvtc -e lftp "$uri"
        ;;
    magnet)
        diana_add "$uri"
        ;;
    *)
        echo "don't know how to handle '$uri'" >&2
        exit 1
        ;;
esac
